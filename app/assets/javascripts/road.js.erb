(function($) {

window.rd = {
	mapBasicOpts: {

	},

	polylineBasicOpts: {
		strokeColor: 'red',
		strokeWeight: 6,
		strokeOpacity: 0.7,
		enableClicking: false
	},

	template: function( id, data ) {
		var template = $.trim( $( "#" + id ).html());

		if ( data ) {
			$.each( data, function( key, value ) {
				var re =  new RegExp( "\\{\\{ " + key + " \\}\\}", "g" );
				template = template.replace( re, rd.encodeHtml( value ));
			});
		}

		return template;
	},

	loadImage: function( file, callback ) {
		var img = new Image();
		
		if ( callback ) {
			img.onload = function() {
				callback( img );
			};
			
			img.onerror = function() {
				callback();
			}
		}

		if ( typeof file == "string" ) {
			img.src = file;
		} else if ( file.nodeName && file.nodeName == "IMG" ) {
			img.src = file.src;
		} else if ( window.FileReader && FileReader.prototype.readAsDataURL ) {
			var fileReader = new FileReader();
			fileReader.onload = function (e) {
				img.src = e.target.result;
			};
			fileReader.readAsDataURL( file );
		} else {
			callback();
		}
	},


	preloadImages: function( images ) {
	    $.each( images, function( i, img ) {
			rd.loadImage( img );
	    });
	},

	encodeHtml: function( value ) {
		return ( value + "" ).replace(/&/g, '&amp;')
            .replace(/"/g, '&quot;')
            .replace(/'/g, '&#39;')
            .replace(/</g, '&lt;')
            .replace(/>/g, '&gt;');
	},

	editPoi: function(e) {
		console.log(e);
		var marker = e.target,
			form = rd.template('tpl-poi-form', {});
			// data = marker.data('poiInfo');

		var infoWin = new BMap.InfoWindow(form, {
			width: 300,
			height: 200,
			enableMessage: false
		});

		marker.openInfoWindow(infoWin);
	}
}

})(jQuery);
