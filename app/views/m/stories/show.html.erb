<div id="page-stories-show">
	<div data-role="header">
		<a href="/m/stories/" class="btn-nav"><i class="icon-angle-left"></i></a>
		<h1><%= @story.title %></h1>
		<a href="#" class="btn-nav"><img src="<%= asset_path 'm/btn_share.png' %>" class="button-share"></a>
	</div>

	<div class="container" id="container">
		<img src="<%= asset_path 'm/app_route_detail_img.jpg' %>" alt="" class="detail-img">

		<div class="gallery">
			<% @story.photos.each do |p| %>
				<a href="#<%= p.id %>" data-rel="popup" data-position-to="window" data-transition="fade">
					<img src="<%= p.attachment %>" class="pop-thumb">
				</a>
				<div data-role="popup" id="<%= p.id %>" data-overlay-theme="a" data-theme="d" data-corners="false">
			    	<img class="popphoto" src="<%= p.attachment %>">
				</div>
			<% end %>
		</div>

		<div class="story-desc"></div>

		<div class="other-links">
			<h4>相关链接</h4>
			<ul>
				<li><a href="#"><img src="<%= asset_path 'm/app_related_articles_favicon.png' %>"><span>寻找身边的探路者 第三站极美之旅</span></a></li>
				<li><a href="#"><img src="<%= asset_path 'm/app_related_articles_favicon.png' %>"><span>周六龙泉山骑行记</span></a></li>
			</ul>
		</div>

		<p class="disqus"><a href="" target="_blank">4 条评论</a></p>
	</div>	
	
</div>